{
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
      "*": true
    },
    "github.copilot.advanced": {
      "indentationMode": {
        "typescript": true,
        "csharp": true
      }
    },
    "[csharp]": {
      "editor.defaultFormatter": "ms-dotnettools.csharp",
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.formatOnSave": true
    },
    "files.associations": {
      "*.cs": "csharp",
      "*.tsx": "typescriptreact"
    }
  }